package cl.duocuc.microservicio_inventario.model;

import jakarta.persistence.*;
import jakarta.validation.constraints.*;  //  importa validaciones
import lombok.*;

@Entity
@Table(name = "PRODUCTOS")
@Data
@NoArgsConstructor
@AllArgsConstructor
@Builder
public class Producto {

    @Id
    @GeneratedValue(strategy = GenerationType.IDENTITY)
    private Long id;

    @NotBlank(message = "El nombre es obligatorio")              //  validaci贸n
    @Column(name = "NOMBRE", nullable = false)
    private String nombre;

    @Size(max = 255, message = "La descripci贸n no debe superar 255 caracteres") //  opcional
    @Column(name = "DESCRIPCION")
    private String descripcion;

    @NotNull(message = "La cantidad es obligatoria")             //  validaci贸n
    @PositiveOrZero(message = "La cantidad no puede ser negativa") //  validaci贸n
    @Column(name = "CANTIDAD", nullable = false)
    private Integer cantidad;

    @NotNull(message = "El precio es obligatorio")               //  validaci贸n
    @Positive(message = "El precio debe ser mayor que 0")        //  validaci贸n
    @Column(name = "PRECIO", nullable = false)
    private Double precio;
}
